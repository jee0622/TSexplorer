<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tscale.tsexplorer.details.ProductDetailsFragment">

    <include layout="@layout/titlebar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/details_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textSize="@dimen/details_title" />

        <TextView
            android:id="@+id/details_product_num_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_product_name"
            android:text="@string/product_num"
            android:textSize="@dimen/details_pro_num" />

        <TextView
            android:id="@+id/details_product_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_product_name"
            android:layout_toRightOf="@id/details_product_num_textView"
            android:text="@string/loading"
            android:textSize="@dimen/details_pro_num" />



    </RelativeLayout>

<include layout="@layout/details_list_item" android:id="@+id/details_price" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
<include layout="@layout/details_list_item" android:id="@+id/details_unit" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
<include layout="@layout/details_list_item" android:id="@+id/details_abbr" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
<include layout="@layout/details_list_item" android:id="@+id/details_barcode" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
