<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">


    <ImageView
        android:id="@+id/option_item_icon"
        android:layout_width="@dimen/option_icon_size"
        android:layout_height="@dimen/option_icon_size"
        android:layout_marginLeft="@dimen/option_icon_margin_left"
        android:layout_marginTop="@dimen/option_icon_margin_top"
        android:src="@mipmap/option_icon_add"/>

    <TextView
        android:id="@+id/option_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/option_text_margin_left"
        android:layout_marginTop="@dimen/option_text_margin_top"
        android:layout_toRightOf="@id/option_item_icon"
        android:textColor="@color/option_text"
        android:textSize="@dimen/option_text_size"
        android:text="添加信息"/>
</RelativeLayout>